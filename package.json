{
  "name": "valentine-website",
  "version": "1.0.0",
  "description": "Valentine Surprise Website - Fullstack React + Node.js",
  "scripts": {
    "install:all": "cd frontend && npm install && cd ../backend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build --prefix frontend && node -e \"const fs=require('fs');fs.rmSync('dist',{recursive:true,force:true});fs.cpSync('frontend/dist','dist',{recursive:true});\"",
    "build:all": "cd frontend && npm run build && cd ../backend && npm run build",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run preview"
  },
  "keywords": [
    "valentine",
    "react",
    "typescript",
    "nodejs",
    "express",
    "supabase"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
